<div class="row-fluid">
  <div class="span8 offset2">
    <div class="btn-toolbar">
      <div class="btn-group">
        <button class="btn">Choose Layout</button>
        <button class="btn dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li class="dropdown-submenu">
            <a href="#">Templates</a>
            <ul class="dropdown-menu">
              {% for name, file in templates %}
              <li><a href="{{ cms.url('/admin/editor/' ~ name) }}">{{ name|title }}</a></li>
              {% endfor %}
            </ul>
          </li>
          <li class="divider"></li>
          {% for name, file in layouts %}
          <li><a href="{{ cms.url('/admin/editor/' ~ name) }}">{{ name|title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      <div class="btn-group">
        <button class="btn">Code Snippets</button>
        <button class="btn dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li class="dropdown-submenu">
            <a href="#">HTML</a>
            <ul class="dropdown-menu">
              <li><a href="#">Global Area</a></li>
              <li><a href="#">Local Area</a></li>
            </ul>
          </li>
          <li class="dropdown-submenu">
            <a href="#">Twig</a>
            <ul class="dropdown-menu">
              <li><a href="#" onclick="editor.insert('{% raw %}{% include ... %}{% endraw %}')">Include</a></li>
              <li><a href="#">...</a></li>
            </ul>
          </li>
          <li class="dropdown-submenu">
            <a href="#">Javascript</a>
            <ul class="dropdown-menu">
              <li><a href="#">jQuery</a></li>
              <li><a href="#">Bootstrap</a></li>
            </ul>
          </li>
          <li class="dropdown-submenu">
            <a href="#">CSS</a>
            <ul class="dropdown-menu">
              <li><a href="#">Bootstrap</a></li>
            </ul>
          </li>
        </ul>
      </div>
      <div class="btn-group pull-right">
        <button class="btn btn-primary" onclick="actions.save()">Save</button>
        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><a href="#" onclick="actions.revert()">Revert changes</a></li>
          <li><a href="#" onclick="actions.debug()">Show in console</a></li>
          <li class="divider"></li>
          <li><a href="/admin/editor">Return to index</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="well span8 offset2">
    <div id="editor">{{ code }}</div>
  </div>
</div>